<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:expandableTextView="http://schemas.android.com/apk/res-auto"
    android:background="@color/border">
    <RelativeLayout
        android:id="@+id/item_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

        <ScrollView
            android:layout_below="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottomLay"

            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/productimage"
                        android:layout_width="match_parent"
                        android:layout_height="400dp"
                        android:background="@color/stroke"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_photo" />



                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="@dimen/defaultMargin"
                        android:layout_marginEnd="@dimen/defaultMargin">
                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/heart"
                            android:clickable="true"
                            android:focusable="true"
                            android:focusableInTouchMode="false"
                            android:layout_width="@dimen/ProductWishIconSize"
                            android:layout_height="@dimen/ProductWishIconSize"
                            android:scaleType="center"
                            android:src="@drawable/ic_heart_grey600_24dp"
                            />

                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/border" />
                <TextView
                    android:gravity="start"
                    android:id="@+id/productType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/defaultMargin"
                    android:layout_marginRight="@dimen/defaultMargin"
                    android:layout_marginTop="@dimen/defaultMargin"
                    android:text="@string/loading"
                    android:textStyle="bold"
                    android:textColor="@color/blue_900"
                    android:textSize="12sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/border" />
                <TextView
                    android:id="@+id/productname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/defaultMargin"
                    android:layout_marginRight="@dimen/defaultMargin"
                    android:layout_marginTop="@dimen/defaultMargin"
                    android:text="@string/loading"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="24sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/productprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/defaultMargin"
                        android:text="@string/loading"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                    <TextView

                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:id="@+id/ProductOldPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorAccent"
                        android:text="@string/loading"
                        android:textSize="12sp"
                        android:visibility="invisible"

                        />
                    <TextView
                        android:layout_marginLeft="8dp"
                        android:id="@+id/ProductDiscount"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="@string/best_value"
                        android:textSize="12sp"
                        android:textColor="#fff"
                        android:background="@color/colorPrimaryDark_Alt"
                        android:layout_marginStart="8dp"
                        android:visibility="invisible"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/include_vat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/defaultMargin"
                    android:layout_marginRight="@dimen/defaultMargin"
                    android:layout_marginTop="@dimen/defaultMargin"
                    android:text="@string/all_prices_include_vat"
                    android:textColor="@color/black"

                    android:textSize="12sp" />
                <TextView
                    android:gravity="start"
                    android:visibility="gone"
                    android:id="@+id/productbrand"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/defaultMargin"
                    android:layout_marginRight="@dimen/defaultMargin"
                    android:layout_marginTop="@dimen/defaultMargin"
                    android:text="@string/loading"
                    android:textStyle="bold"
                    android:textColor="@color/blue_900"
                    android:textSize="12sp" />

                <include layout="@layout/border" />
                <LinearLayout
                    android:id="@+id/sizeParentLay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/size"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/defaultMargin"
                        android:layout_marginRight="@dimen/defaultMargin"
                        android:layout_marginTop="@dimen/defaultMargin"
                        android:text="@string/size"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <org.apmem.tools.layouts.FlowLayout
                        android:id="@+id/sizesLay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/defaultMargin" />

                    <include layout="@layout/border" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/colorParentLay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/color"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/defaultMargin"
                        android:layout_marginRight="@dimen/defaultMargin"
                        android:layout_marginTop="@dimen/defaultMargin"
                        android:text="@string/color"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <org.apmem.tools.layouts.FlowLayout
                        android:id="@+id/colorsLay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/defaultMargin" />

                    <include layout="@layout/border" />
                </LinearLayout>

                <TextView
                    android:id="@+id/quantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/defaultMargin"
                    android:layout_marginRight="@dimen/defaultMargin"
                    android:layout_marginTop="@dimen/defaultMargin"
                    android:text="@string/quantity_label"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/defaultMargin"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/minus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:clickable="true"
                        android:focusable="true"
                        android:focusableInTouchMode="false"
                        android:src="@drawable/ic_minus_circle_outline_grey600_18dp" />

                    <TextView
                        android:id="@+id/quantityProductPage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/defaultMargin"
                        android:layout_marginRight="@dimen/defaultMargin"
                        android:text="1"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/plus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:clickable="true"
                        android:focusable="true"
                        android:focusableInTouchMode="false"
                        android:src="@drawable/ic_plus_circle_outline_grey600_18dp" />
                </LinearLayout>

                <include layout="@layout/border" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"

                    android:background="@color/white"
                    android:stretchColumns="1">

                    <TableRow android:background="@color/white">

                        <TextView
                            android:id="@+id/desc_panel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/halfMargin"
                            android:layout_marginLeft="@dimen/halfMargin"
                            android:layout_marginRight="2dp"
                            android:layout_marginStart="@dimen/halfMargin"
                            android:layout_marginEnd="2dp"
                            android:layout_marginTop="@dimen/halfMargin"
                            android:padding="8dp"
                            android:layout_weight="1"
                            android:background="@drawable/border"
                            android:text="@string/desc"
                            android:textColor="@color/black"
                            android:textAlignment="center"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/spec_panel"
                            android:padding="8dp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/halfMargin"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="@dimen/halfMargin"
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="@dimen/halfMargin"
                            android:layout_marginTop="@dimen/halfMargin"
                            android:layout_weight="1"
                            android:background="@drawable/border_white"
                            android:text="@string/specifications"
                            android:textColor="@color/black"
                            android:textAlignment="center"
                            android:textSize="16sp" />
                    </TableRow>
                </TableLayout>

                <LinearLayout
                    android:id="@+id/desc"
                    android:background="@drawable/border_b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.mohaa.eldokan.Utils.ExpandableDescTextView
                        android:padding="4dp"
                        android:id="@+id/desc_message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        expandableTextView:animAlphaStart="1"
                        expandableTextView:animDuration="200"
                        expandableTextView:collapseText="@string/collapse_text_label"
                        expandableTextView:expandText="@string/expand_text_label"
                        expandableTextView:maxCollapsedLines="3">

                        <TextView
                            android:id="@+id/productdescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:autoLink="web"
                            android:ellipsize="end"
                            android:textAppearance="@style/TextAppearance.Second" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:paddingTop="@dimen/small_intrinsic_padding">
                            <TextView
                                android:id="@+id/products_details"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:text="@string/details"
                                android:autoLink="web"
                                android:textAppearance="@style/TextAppearance.Second.Light" />

                        </RelativeLayout>

                    </com.mohaa.eldokan.Utils.ExpandableDescTextView>
                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/spec"
                    android:background="@drawable/border_b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/department"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/defaultMargin"
                            android:layout_marginRight="@dimen/defaultMargin"
                            android:layout_marginTop="@dimen/defaultMargin"
                            android:text="@string/department"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                        <TextView
                            android:layout_width="fill_parent"
                            android:gravity="end|center"
                            android:layout_marginLeft="@dimen/defaultMargin"
                            android:layout_marginRight="@dimen/defaultMargin"
                            android:layout_marginTop="@dimen/defaultMargin"
                            android:id="@+id/productdepartment"
                            android:layout_height="wrap_content"
                            android:text="@string/loading"
                            android:textStyle="bold"
                            android:textColor="@color/blue_800"

                            android:textSize="16sp" />

                    </LinearLayout>
                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/occasion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/defaultMargin"
                            android:layout_marginRight="@dimen/defaultMargin"
                            android:layout_marginTop="@dimen/defaultMargin"
                            android:text="@string/occasion"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                        <TextView
                            android:layout_marginLeft="@dimen/defaultMargin"
                            android:layout_marginRight="@dimen/defaultMargin"
                            android:layout_marginTop="@dimen/defaultMargin"
                            android:id="@+id/productoccasion"
                            android:layout_width="fill_parent"
                            android:gravity="end|center"
                            android:layout_height="wrap_content"
                            android:text="@string/loading"
                            android:textStyle="bold"
                            android:textColor="@color/blue_800"

                            android:textSize="16sp" />

                    </LinearLayout>
                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/material"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/defaultMargin"
                            android:layout_marginRight="@dimen/defaultMargin"
                            android:layout_marginTop="@dimen/defaultMargin"
                            android:text="@string/material"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                        <TextView
                            android:layout_marginLeft="@dimen/defaultMargin"
                            android:layout_marginRight="@dimen/defaultMargin"
                            android:layout_marginTop="@dimen/defaultMargin"
                            android:id="@+id/productmaterial"
                            android:layout_width="fill_parent"
                            android:gravity="end|center"
                            android:layout_height="wrap_content"
                            android:text="@string/loading"
                            android:textStyle="bold"
                            android:textColor="@color/blue_800"

                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/displaytype"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/defaultMargin"
                            android:layout_marginRight="@dimen/defaultMargin"
                            android:layout_marginTop="@dimen/defaultMargin"
                            android:text="@string/displaytype"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                        <TextView
                            android:layout_marginLeft="@dimen/defaultMargin"
                            android:layout_marginRight="@dimen/defaultMargin"
                            android:layout_marginTop="@dimen/defaultMargin"
                            android:id="@+id/productdisplaytype"
                            android:layout_width="fill_parent"
                            android:gravity="end|center"
                            android:layout_height="wrap_content"
                            android:text="@string/loading"
                            android:textStyle="bold"
                            android:textColor="@color/blue_800"

                            android:textSize="16sp" />

                    </LinearLayout>
                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/screen_size"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/defaultMargin"
                            android:layout_marginRight="@dimen/defaultMargin"
                            android:layout_marginTop="@dimen/defaultMargin"
                            android:text="@string/screen_size"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                        <TextView
                            android:layout_marginLeft="@dimen/defaultMargin"
                            android:layout_marginRight="@dimen/defaultMargin"
                            android:layout_marginTop="@dimen/defaultMargin"
                            android:id="@+id/productscreen_size"
                            android:layout_width="fill_parent"
                            android:gravity="end|center"
                            android:layout_height="wrap_content"
                            android:text="@string/loading"
                            android:textStyle="bold"
                            android:textColor="@color/blue_800"

                            android:textSize="16sp" />

                    </LinearLayout>
                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/camera_resolution"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/defaultMargin"
                            android:layout_marginRight="@dimen/defaultMargin"
                            android:layout_marginTop="@dimen/defaultMargin"
                            android:text="@string/camera_resolution"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                        <TextView
                            android:layout_marginLeft="@dimen/defaultMargin"
                            android:layout_marginRight="@dimen/defaultMargin"
                            android:layout_marginTop="@dimen/defaultMargin"
                            android:id="@+id/productcamera_resolution"
                            android:layout_width="fill_parent"
                            android:gravity="end|center"
                            android:layout_height="wrap_content"
                            android:text="@string/loading"
                            android:textStyle="bold"
                            android:textColor="@color/blue_800"

                            android:textSize="16sp" />


                    </LinearLayout>
                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/momery_size"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/defaultMargin"
                            android:layout_marginRight="@dimen/defaultMargin"
                            android:layout_marginTop="@dimen/defaultMargin"
                            android:text="@string/momery_size"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                        <TextView
                            android:layout_marginLeft="@dimen/defaultMargin"
                            android:layout_marginRight="@dimen/defaultMargin"
                            android:layout_marginTop="@dimen/defaultMargin"
                            android:id="@+id/productmomery_size"
                            android:layout_width="fill_parent"
                            android:gravity="end|center"
                            android:layout_height="wrap_content"
                            android:text="@string/loading"
                            android:textStyle="bold"
                            android:textColor="@color/blue_800"

                            android:textSize="16sp" />


                    </LinearLayout>
                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/storage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/defaultMargin"
                            android:layout_marginRight="@dimen/defaultMargin"
                            android:layout_marginTop="@dimen/defaultMargin"
                            android:text="@string/storage"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                        <TextView
                            android:layout_marginLeft="@dimen/defaultMargin"
                            android:layout_marginRight="@dimen/defaultMargin"
                            android:layout_marginTop="@dimen/defaultMargin"
                            android:id="@+id/productstorage"
                            android:layout_width="fill_parent"
                            android:gravity="end|center"
                            android:layout_height="wrap_content"
                            android:text="@string/loading"
                            android:textStyle="bold"
                            android:textColor="@color/blue_800"

                            android:textSize="16sp" />

                    </LinearLayout>
                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/processor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/defaultMargin"
                            android:layout_marginRight="@dimen/defaultMargin"
                            android:layout_marginTop="@dimen/defaultMargin"
                            android:text="@string/processor"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                        <TextView
                            android:layout_marginLeft="@dimen/defaultMargin"
                            android:layout_marginRight="@dimen/defaultMargin"
                            android:layout_marginTop="@dimen/defaultMargin"
                            android:id="@+id/productprocessor"
                            android:layout_width="fill_parent"
                            android:gravity="end|center"
                            android:layout_height="wrap_content"
                            android:text="@string/loading"
                            android:textStyle="bold"
                            android:textColor="@color/blue_800"

                            android:textSize="16sp" />

                    </LinearLayout>
                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/gpu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/defaultMargin"
                            android:layout_marginRight="@dimen/defaultMargin"
                            android:layout_marginTop="@dimen/defaultMargin"
                            android:text="@string/gpu"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                        <TextView
                            android:layout_marginLeft="@dimen/defaultMargin"
                            android:layout_marginRight="@dimen/defaultMargin"
                            android:layout_marginTop="@dimen/defaultMargin"
                            android:id="@+id/productgpu"
                            android:layout_width="fill_parent"
                            android:gravity="end|center"
                            android:layout_height="wrap_content"
                            android:text="@string/loading"
                            android:textStyle="bold"
                            android:textColor="@color/blue_800"

                            android:textSize="16sp" />

                    </LinearLayout>

                </LinearLayout>
                <include layout="@layout/border" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/defaultMargin"
                        android:layout_marginRight="@dimen/defaultMargin"
                        android:layout_marginTop="@dimen/defaultMargin"
                        android:text="@string/sold_by"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                    <TextView
                        android:layout_marginLeft="@dimen/defaultMargin"
                        android:layout_marginRight="@dimen/defaultMargin"
                        android:layout_marginTop="@dimen/defaultMargin"
                        android:id="@+id/product_trader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/loading"
                        android:textStyle="bold"
                        android:textColor="@color/blue_800"

                        android:textSize="16sp" />
                </LinearLayout>
                <include layout="@layout/border" />

                <TextView
                    android:id="@+id/offer_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/defaultMargin"
                    android:layout_marginRight="@dimen/defaultMargin"
                    android:layout_marginTop="@dimen/defaultMargin"
                    android:text="@string/offer_details"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/offer_detials_t"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/defaultMargin"
                    android:layout_marginRight="@dimen/defaultMargin"
                    android:layout_marginTop="@dimen/defaultMargin"
                    android:text="@string/enjoy_hassle_free_returns_with_this_offer"
                    android:textColor="@color/black"

                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/seller_note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/defaultMargin"
                    android:layout_marginRight="@dimen/defaultMargin"
                    android:layout_marginTop="@dimen/defaultMargin"
                    android:text="@string/seller_note"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/seller_note_t"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/defaultMargin"
                    android:layout_marginRight="@dimen/defaultMargin"
